/* pages/receivingInspectionForm/receivingInspectionForm.wxss */
.page-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background-color: #f2f2f7;
    padding-top: env(safe-area-inset-top);
    z-index: 100;
    margin-top: 10px;
}

.page-title {
    text-align: center;
    font-size: 22px;
    font-weight: 600;
    color: #000;
    /* padding: 16px 20px 10px; */
    /* margin-top: 10px; */
}

.page-title .nav-back {
    position: absolute;
    left: 12px;
    /* margin-right: auto; */
}

.back-icon {
    font-size: 20px;
    color: #007aff;
}

.search-bar {
    display: flex;
    padding: 10px 20px;
    background-color: #fff;
    align-items: center;
    border-bottom: 1px solid #e7e7e7;
    margin-top: 0;
}

.search-input {
    flex: 1;
    padding: 8px;
    border: 1px solid #ddd;
    border-radius: 4px;
    margin-right: 10px;
}

.search-button {
    padding: 8px 16px;
    background-color: #007aff;
    color: white;
    border: none;
    border-radius: 4px;
}

.table-container {
    width: 100%;
    /* height: calc(100vh - 240px); */
    height: calc(100vh - 660rpx);
    margin-top: 320rpx;
    margin-bottom: 120px;
}

.table {
    display: flex;
    flex-direction: column;
    width: 400px;
}

.table-row {
    display: flex;
    border-bottom: 1px solid #e7e7e7;
}

.table-header {
    background-color: #f0f0f0;
    font-weight: bold;
}

.table-cell {
    flex: 1;
    padding: 10px;
    text-align: center;
}

.bottom-nav {
    display: flex;
    justify-content: space-around;
    padding: 10px 0;
    background-color: #f8f8f8;
    border-top: 1px solid #e7e7e7;
    position: fixed;
    bottom: 0;
    width: 100%;
}

.nav-button {
    flex: 1;
    margin: 0 5px;
    padding: 10px;
    background-color: #ffffff;
    border: 1px solid #dcdcdc;
    border-radius: 5px;
    text-align: center;
    color: #8a8a8a; /* Default color */
}

.nav-button.selected {
    color: #007aff; /* Selected color */
    font-weight: bold;
}

.pagination-bar {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10px;
    background-color: #fff;
    position: fixed;
    bottom: 60px;
    left: 0;
    right: 0;
    z-index: 99;
    box-shadow: 0 -2px 6px rgba(0, 0, 0, 0.1);
}

.pagination-bar button {
    width: 70px;
    margin: 0 10px;
    font-size: 14px;
    padding: 6px 12px;
}

.goto-page {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10px;
    background-color: #fff;
    position: fixed;
    bottom: 110px;
    left: 0;
    right: 0;
    z-index: 99;
}

.goto-input {
    width: 60px;
    height: 30px;
    margin: 0 10px;
    text-align: center;
    border: 1px solid #ddd;
    border-radius: 4px;
}

.fab-wrapper {
    position: fixed;
    bottom: 80rpx; /* Adjust this value to place it above the nav bar */
    right: 40rpx;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    background-color: #007aff;
    display: flex;
    justify-content: center;
    align-items: center;
    box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.3);
    z-index: 1000; /* Ensure it is above other elements */
}

.fab-plus {
    color: #fff;
    font-size: 60rpx;
    line-height: 70rpx;
}

/* Ensure no overlap with iPhone notch */

/* 状态标签样式 */
.status-tag {
    display: inline-block;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 14px;
    font-weight: 500;
    margin: 0 auto;
}

.status-pending {
    background-color: #fff3cd;
    color: #856404;
}

.status-received {
    background-color: #cce5ff;
    color: #004085;
}

.status-in-transit {
    background-color: #d1ecf1;
    color: #0c5460;
}

.status-completed {
    background-color: #d4edda;
    color: #155724;
}

.status-error {
    background-color: #f8d7da;
    color: #721c24;
}

/* 复用检查表样式 */
@import "../shippingInspectionForm/shippingInspectionForm.wxss";

/* 仓管员特有样式 */
.tab-bar {
  display: flex;
  justify-content: center;
  margin: 16px 0;
  background-color: #fff;
  border-radius: 8px;
  padding: 4px;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 8px 0;
  color: #666;
  font-size: 15px;
  max-width: 120px;
  border-radius: 6px;
}

.tab.selected {
  background-color: #007aff;
  color: #fff;
}

.action-bar {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-top: 16px;
}

.search-bar {
  flex: 1;
}

.export-button {
  padding: 0 20px;
  height: 36px;
  line-height: 36px;
  background-color: #34c759;
  color: #fff;
  font-size: 14px;
  border-radius: 6px;
} 
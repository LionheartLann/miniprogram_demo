.container {
padding: 20px;
}
.form-group {
margin-bottom: 15px;
}
label {
display: block;
font-weight: bold;
margin-bottom: 5px;
}
input, textarea {
width: 100%;
box-sizing: border-box;
padding: 8px;
border: 1px solid #ccc;
}
.submit-button {
background-color: #007aff;
color: white;
border: none;
padding: 12px;
width: 100%;
border-radius: 4px;
font-size: 16px;
}
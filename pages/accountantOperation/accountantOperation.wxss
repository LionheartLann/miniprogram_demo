.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.tab-content {
  flex: 1;
  padding: 20px;
  overflow-y: auto;
}

.bottom-nav {
  display: flex;
  justify-content: space-around;
  padding: 10px 0;
  background-color: #f8f8f8;
  border-top: 1px solid #e7e7e7;
  position: fixed;
  bottom: 0;
  width: 100%;
}

button {
  flex: 1;
  margin: 0 5px;
  padding: 10px;
  background-color: #ffffff;
  border: 1px solid #dcdcdc;
  border-radius: 5px;
  text-align: center;
}

button.active {
  background-color: #007aff;
  color: #ffffff;
  border-color: #007aff;
} 
.container {
  padding: 20px;
}

.title {
  font-size: 24px;
  margin-bottom: 20px;
}

.search-bar {
  display: flex;
  margin-bottom: 20px;
}

.search-input {
  flex: 1;
  padding: 8px;
  border: 1px solid #ddd;
  border-radius: 4px;
}

.search-button {
  padding: 8px 16px;
  margin-left: 10px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 4px;
}

.task-status {
  margin-bottom: 30px;
}

.section-title {
  font-size: 20px;
  margin-bottom: 10px;
}

.task-list {
  margin-bottom: 10px;
}

.task-item {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.task-item text {
  flex: 1;
}

.status {
  margin-right: 10px;
}

.status.green {
  color: green;
}

.status.yellow {
  color: yellow;
}

.status.red {
  color: red;
}

button {
  margin-left: 5px;
}

.add-button {
  width: 100%;
  padding: 10px;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 5px;
  font-size: 18px;
  text-align: center;
} 
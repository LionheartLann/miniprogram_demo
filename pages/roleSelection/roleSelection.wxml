<view class="container-role">
  <!-- 自定义导航栏 -->
  <view class="custom-nav">
    <view class="nav-title">角色选择</view>
  </view>
  
  <view class="role-card">
    <view class="role-section">
      <button class="role-button" 
              hover-class="button-hover" 
              bindtap="onSelectRole" 
              data-role="做账员">
        <view class="button-content">
          <view class="text-content">
            <text class="role-name">做账员</text>
            <text class="role-description">负责审核仓库出入库单据，处理账务相关工作</text>
          </view>
        </view>
        <view class="arrow-icon"></view>
      </button>
      
      <button class="role-button" 
              hover-class="button-hover" 
              bindtap="onSelectRole" 
              data-role="发货师傅">
        <view class="button-content">
          <view class="text-content">
            <text class="role-name">发货师傅</text>
            <text class="role-description">负责物料的发货管理</text>
          </view>
        </view>
        <view class="arrow-icon"></view>
      </button>
      
      <button class="role-button" 
              hover-class="button-hover" 
              bindtap="onSelectRole" 
              data-role="接车师傅">
        <view class="button-content">
          <view class="text-content">
            <text class="role-name">接车师傅</text>
            <text class="role-description">负责物料的接收和入库</text>
          </view>
        </view>
        <view class="arrow-icon"></view>
      </button>
      
      <button class="role-button" 
              hover-class="button-hover" 
              bindtap="onSelectRole" 
              data-role="仓管员">
        <view class="button-content">
          <view class="text-content">
            <text class="role-name">仓库管理员</text>
            <text class="role-description">负责仓库的整体管理，监督出入库流程</text>
          </view>
        </view>
        <view class="arrow-icon"></view>
      </button>
    </view>
  </view>
</view> 
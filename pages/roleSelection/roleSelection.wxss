.container {
  min-height: 100vh;
  background-color: #f2f2f7;
  padding-top: env(safe-area-inset-top);
  box-sizing: border-box;
}

.page-header {
  background-color: #f2f2f7;
  padding: 12px 20px 16px;
}

.page-title {
  font-size: 22px;
  font-weight: 600;
  color: #000;
}

.role-card {
  margin: 20px 16px;
  background-color: #fff;
  border-radius: 10px;
  overflow: hidden;
  width: auto;
}

.role-section {
  padding: 0 16px;
}

.role-button {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  padding: 16px 0;
  background-color: transparent;
  border: none;
  border-bottom: 1px solid #e5e5ea;
  border-radius: 0;
}

.role-button:last-child {
  border-bottom: none;
}

.role-button::after {
  border: none;
}

.button-content {
  display: flex;
  align-items: center;
  flex: 1;
}

.role-icon {
  width: 28px;
  height: 28px;
  margin-right: 12px;
  flex-shrink: 0;
}

.text-content {
  display: flex;
  flex-direction: column;
  flex: 1;
  gap: 4px;
}

.role-name {
  font-size: 17px;
  color: #000;
  flex-shrink: 0;
}

.role-description {
  font-size: 15px;
  color: #8e8e93;
  line-height: 1.4;
}

.arrow-icon {
  width: 8px;
  height: 8px;
  border-top: 2px solid #c7c7cc;
  border-right: 2px solid #c7c7cc;
  transform: rotate(45deg);
  margin-left: 8px;
  flex-shrink: 0;
  margin-right: 8px;
  align-self: center;
}

.button-hover {
  background-color: #f2f2f7;
} 
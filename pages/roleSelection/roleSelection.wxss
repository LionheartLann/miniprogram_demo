.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 20px;
  background-color: #f5f5f5;
}

.title {
  font-size: 24px;
  margin-bottom: 20px;
}

.role-list {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.role-button {
  width: 80%;
  padding: 15px;
  margin: 10px 0;
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 5px;
  font-size: 18px;
  text-align: center;
} 
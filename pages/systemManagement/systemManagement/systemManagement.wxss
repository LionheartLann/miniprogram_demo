/* pages/systemManagement/systemManagement/systemManagement.wxss */

/* 容器 */
.container {
  min-height: 100vh;
  background-color: #f2f2f7;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 导航栏 */
.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88px;
  background-color: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  display: flex;
  align-items: flex-end;
  padding: 0 16px 10px;
  border-bottom: 0.5px solid rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.nav-back {
  padding: 4px 12px;
  margin-right: 8px;
}

.back-icon {
  font-size: 20px;
  color: #007aff;
}

.nav-title {
  font-size: 17px;
  font-weight: 600;
  color: #000;
  flex: 1;
  text-align: center;
  margin-right: 44px;
}

/* 菜单列表 */
.menu-list {
  padding: 88px 16px 0;
}

.menu-item {
  background: #fff;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 12px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.menu-content {
  flex: 1;
}

.menu-title {
  font-size: 17px;
  font-weight: 500;
  color: #000;
  display: block;
  margin-bottom: 4px;
}

.menu-desc {
  font-size: 14px;
  color: #8e8e93;
  display: block;
}

.menu-arrow {
  font-size: 18px;
  color: #8e8e93;
  margin-left: 12px;
}

/* 点击态样式 */
.menu-item:active {
  opacity: 0.7;
}